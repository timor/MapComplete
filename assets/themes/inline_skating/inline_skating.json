                                "foot=no",
                                "access=private",
                                "foot=private",
                                "sidewalk=no",
                                "sidewalk=none",
                                "sidewalk=separate"
                            ]
                        },
                        "then": "no"
                    }
                ]
            },
            "color": {
                "render": "rgba(170, 170, 170, 0.7)",
                "mappings": [
                    {
                        "if": "sidewalk:both:smoothness=excellent",
                        "then": "rgba(0, 200, 0, 0.7)"
                    },
                    {
                        "if": "sidewalk:both:smoothness=good",
                        "then": "rgba(80, 160, 0, 0.7)"
