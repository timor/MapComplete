            "minzoom": 16,
            "source": {
                "osmTags": {
                    "or": [
                        "highway=residential",
                        "highway=tertiary",
                        "highway=unclassified",
                        "highway=service",
                        "highway=primary",
                        "highway=secondary",
                        "highway=footway",
